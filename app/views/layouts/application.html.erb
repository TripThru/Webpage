<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body class="<%= controller_name %> <%= action_name %>">
    <div class="navbar navbar-fixed-top navbar-bold" data-spy="affix" data-offset-top="1000">
      <div class="container">
        <div class="navbar-header">
          <a href="<%= root_path %>" class="navbar-brand logo">TripThru</a>
          <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
        </div>
        <div class="navbar-collapse collapse pull-right" id="navbar">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Features', home_path+'#sec2' %></li>
            <li><%= link_to 'Sign-up', home_path+'#sec4' %></li>
            <li><%= link_to 'FAQ', faq_path %></li>
            <li><%= link_to 'Developers', developer_path %></li>
            <li><%= link_to 'About us', about_path %></li>
          </ul>
        </div>
      </div>
    </div>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 text-center">
            <hr>
            <p>Copyright Â©2014 TripThru, Inc. All Rights Reserved</p>
          </div>
        </div>
      </div>
    </footer>
</body>
</html>
