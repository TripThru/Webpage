<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script type="text/javascript" src="http://code.highcharts.com/3.0.10/highcharts.js"></script>
  <script type="text/javascript" src="http://code.highcharts.com/3.0.10/highcharts-more.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body data-no-turbolink="true">
<div class="navbar navbar-bold" data-offset-top="1000">
  <div class="container">
    <div class="navbar-header">
      <a href="<%= root_path %>" class="navbar-brand logo">TripThru</a>
      <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
    </div>
    <div class="navbar-collapse collapse pull-right" id="navbar">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Sign out', signout_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>

<%= yield %>
</body>
</html>
